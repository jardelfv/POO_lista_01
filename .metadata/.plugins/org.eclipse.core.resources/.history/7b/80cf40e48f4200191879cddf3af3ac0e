package exercicio01;

public class Cliente {
	private int codigo;
	private String nome;
	private boolean eClienteEspecial;
	private double limiteCredito;
	
	public Cliente(int c, String n){
		codigo = c;
		nome = n;
		limiteCredito = 0;
		eClienteEspecial = false;
		
	}
	
	public String obterNome(){
		return(nome);
		
	}
	
	public boolean atualizaLimite(double lim){
		boolean update = true;
		
		if(lim >= 0){
			System.out.println("Ok saldo atualizado!");
			update = true;
		}
		else{
			System.out.println("Ops saldo n√£o pode atualizado!");
			update = false;
		}
		return(update);
	}
	
	

}
